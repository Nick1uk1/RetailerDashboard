# Database (PostgreSQL - get from Neon.tech)
DATABASE_URL=postgresql://user:password@host/database?sslmode=require

# Linnworks API
LINNWORKS_APP_ID=
LINNWORKS_APP_SECRET=
LINNWORKS_INSTALL_TOKEN=

# Configuration
PRICES_SOURCE=PORTAL
TAX_MODE=INCLUSIVE
ORDER_UNITS=CASES_ONLY

# Auth
MAGIC_LINK_EXPIRY_MINUTES=15
SESSION_EXPIRY_DAYS=7
NEXTAUTH_SECRET=your-secret-key-here

# App URL (your Vercel domain)
NEXT_PUBLIC_APP_URL=https://your-app.vercel.app

# Order settings
MINIMUM_ORDER_VALUE=250

# Webhooks/Sync
LINNWORKS_WEBHOOK_SECRET=your-webhook-secret
SYNC_SECRET=your-sync-secret
